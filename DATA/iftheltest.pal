program ifThElTest;

function f(n : int) : int
    if n < 0
    then return (0-1)
    else if n = 0
         then return 0
         else return 1;

procedure main ()
begin
    write ("test 1 expects result -1: ");
    write (f(0-8));
    write ("\n");
    write ("test 2 expects result 0: ");
    write (f(0));
    write ("\n");
    write ("test 3 expects result 1: ");
    write (f(3));
    write ("\n");
end;
